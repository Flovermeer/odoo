<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_library_security" model="ir.module.category">
        <field name="name">Library</field>
        <field name="description">Library Access Rights</field>
    </record>

    <record id="library_group_user" model="res.groups">
        <field name="name">Users</field>
        <field name="category_id" ref="module_library_security"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="library_group_manager" model="res.groups">
        <field name="name">Admins</field>
        <field name="category_id" ref="module_library_security"/>
        <field name="implied_ids" eval="[(4, ref('library_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>