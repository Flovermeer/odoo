<odoo>
    <record id="view_book_tracking_form" model="ir.ui.view">
        <field name="name">book.tracking.form</field>
        <field name="model">library_isl.book.tracking</field>
        <field name="arch" type="xml">
            <form string="Book Tracking">
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="borrower_id"/>
                        <field name="borrow_date"/>
                        <field name="return_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_book_tracking_tree" model="ir.ui.view">
        <field name="name">book.tracking.tree</field>
        <field name="model">library_isl.book.tracking</field>
        <field name="arch" type="xml">
            <tree string="Book Tracking">
                <field name="book_id"/>
                <field name="borrower_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
            </tree>
        </field>
    </record>

    <menuitem id="library_tracking_menu" name="Book Tracking" parent="library_menu"/>
    <menuitem id="library_tracking_menu_items" name="Book Tracking" parent="library_tracking_menu" action="action_book_tracking"/>

    <record id="action_book_tracking" model="ir.actions.act_window">
        <field name="name">Book Tracking</field>
        <field name="res_model">library_isl.book.tracking</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>