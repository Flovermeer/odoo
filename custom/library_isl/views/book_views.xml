<odoo>
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.form</field>
        <field name="model">library_isl.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="isbn"/>
                        <field name="owner_id"/>
                    </group>
                    <notebook>
                        <page string="Tracking">
                            <field name="book_tracking_ids">
                                <tree string="Tracking">
                                    <field name="borrower_id"/>
                                    <field name="borrow_date"/>
                                    <field name="return_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">book.tree</field>
        <field name="model">library_isl.book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="owner_id"/>
            </tree>
        </field>
    </record>

    <menuitem id="library_menu" name="Library"/>
    <menuitem id="library_book_menu" name="Books" parent="library_menu"/>
    <menuitem id="library_book_menu_items" name="Books" parent="library_book_menu" action="action_books"/>

    <record id="action_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library_isl.book</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>