<odoo>
    <menuitem id="library_menu_root" name="Library ISL"/>

    <menuitem id="library_menu" name="Library Management" parent="library_menu_root" sequence="10"/>

    <menuitem id="library_books_menu" name="Books" parent="library_menu" sequence="10" action="library_books_action"/>
    <menuitem id="library_book_menu_items" name="Books" parent="library_book_menu" action="action_books"/>
    <menuitem id="library_users_menu" name="Users" parent="library_menu" sequence="20" action="library_users_action"/>
    <menuitem id="library_book_tracking_menu" name="Book Tracking" parent="library_menu" sequence="30" action="library_book_tracking_action"/>

    <record id="library_books_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library_isl.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="library_users_action" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="res_model">library_isl.user</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="library_book_tracking_action" model="ir.actions.act_window">
        <field name="name">Book Tracking</field>
        <field name="res_model">library_isl.book.tracking</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>